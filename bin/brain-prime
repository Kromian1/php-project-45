#!/usr/bin/env php

<?php

$autoloadPath1 = __DIR__ . '/../vendor/autoload.php';
$autoloadPath2 = __DIR__ . '/../../autoload.php';

use function BrainGames\Prime\brainPrimeGame;

if (file_exists($autoloadPath1)) {
    require_once $autoloadPath1;
} elseif (file_exists($autoloadPath2)) {
    require_once $autoloadPath2;
} else {
    fwrite(STDERR, "Autoloader not found. Did you install dependencies?\n");
    exit(1);
}

brainPrimeGame();
